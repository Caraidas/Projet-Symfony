{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/style.css') }}">
{% endblock %}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Mon site Webtoon{% endblock %}</title>
        
    </head>
    <body class="bg-[#1a1b7f] text-white">       

        <header>
            <div class="logo">
                <a href="{{ path('home') }}"><h1>
                    Cattoon
                </h1></a>
            </div>
            <div class="menu">
            
            {% if is_granted('ROLE_AUTHOR') %}
                <a href="{{ path('webtoon_form') }}" class="menu-btn">
                    ‚úçÔ∏è Cr√©er un Webtoon
                </a>
            {% endif %}
            {% if is_granted('ROLE_USER') %}
                <a href="{{ path('user_favoris') }}" class="menu-btn">
                    Mes Favoris
                </a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('admin_user_list') }}" class="menu-btn">Admin</a>
            {% endif %}
            {% if not app.user %}
                <a href="{{ path('app_login') }}" class="menu-btn">Se connecter</a>
                <a href="{{ path('app_register') }}" class="menu-btn">S'inscrire</a>
            {% else %}
                <a href="{{ path('app_logout') }}" class="menu-btn">D√©connexion</a>
            {% endif %}
            
            </div>
            <form action="{{ path('webtoon_search') }}" method="get" style="display: flex; gap: 8px;">
                <input
                    type="text"
                    name="q"
                    placeholder="Rechercher un webtoon..."
                    value="{{ app.request.get('q') }}"
                    style="padding: 5px 10px; border-radius: 4px; border: 1px solid #ccc;"
                >
                <button type="submit" style="padding: 5px 10px; background-color: #36b3b3; color: white; border: none; border-radius: 4px;">
                    üîç
                </button>
            </form>
            
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

    </body>
</html>
