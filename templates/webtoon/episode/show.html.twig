{% extends 'base.html.twig' %}

{% block body %}
    <style>
        .nav-buttons {
            display: flex;
            justify-content: center;
            gap: 10px;
            margin: 20px 0;
        }

        .nav-button {
            background-color: #36b3b3;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 5px;
            transition: background-color 0.2s ease-in-out;
        }

        .nav-button:hover {
            background-color: #2ea3a3;
        }
    </style>

    <h1>{{ episode.title }}</h1>
    <p>Numéro : {{ episode.number }}</p>
    <p>Date de création : {{ episode.createdAt|date('d/m/Y') }}</p>

    {# --- Navigation en haut --- #}
    <div class="nav-buttons">
        {% if previousEpisode %}
            <a href="{{ path('episode_detail', { slug: previousEpisode.webtoon.slug, number: previousEpisode.number }) }}"
            class="nav-button">← Prev</a>
        {% else %}
            <a href="{{ path('webtoon_show', { slug: webtoon.slug }) }}"
            class="nav-button">Back to Webtoon</a>
        {% endif %}

        {% if nextEpisode %}
            <a href="{{ path('episode_detail', { slug: nextEpisode.webtoon.slug, number: nextEpisode.number }) }}"
            class="nav-button">Next →</a>
        {% else %}
            <a href="{{ path('webtoon_show', { slug: webtoon.slug }) }}"
            class="nav-button">Back to Webtoon</a>
        {% endif %}
    </div>

    {# --- Images centrées --- #}
    <div style="display: flex; flex-direction: column; align-items: center;">
        {% for image in episode.images|sort((a, b) => a.position <=> b.position) %}
            <img src="{{ asset('' ~ image.url) }}" alt="Image {{ loop.index }}" style="max-width: 100%; display: block;">
        {% endfor %}
    </div>

    {# --- Navigation en bas --- #}
    <div class="nav-buttons">
        {% if previousEpisode %}
            <a href="{{ path('episode_detail', { slug: previousEpisode.webtoon.slug, number: previousEpisode.number }) }}"
            class="nav-button">← Prev</a>
        {% else %}
            <a href="{{ path('webtoon_show', { slug: webtoon.slug }) }}"
            class="nav-button">Back to Webtoon</a>
        {% endif %}

        {% if nextEpisode %}
            <a href="{{ path('episode_detail', { slug: nextEpisode.webtoon.slug, number: nextEpisode.number }) }}"
            class="nav-button">Next →</a>
        {% else %}
            <a href="{{ path('webtoon_show', { slug: webtoon.slug }) }}"
            class="nav-button">Back to Webtoon</a>
        {% endif %}
    </div>
    <h2>Commentaires</h2>

    {# Formulaire d'ajout de commentaire #}
    {% if app.user %}
        <div class="comment-box">
            {{ form_start(form) }}
                {{ form_row(form.message) }}
                <button type="submit" class="send-btn">➤</button>
            {{ form_end(form) }}
        </div>
    {% else %}
        <p><a href="{{ path('app_login') }}">Connecte-toi</a> pour commenter cet épisode.</p>
    {% endif %}

    {# Liste des commentaires #}
    <div>
        {% for commentaire in commentaires %}
            <div style="margin-bottom: 1rem; padding: 0.5rem; border-bottom: 1px solid #ccc;">
                <strong>{{ commentaire.user.pseudo }}</strong><br>
                <p>{{ commentaire.message }}</p>
            </div>
        {% else %}
            <p>Soyez le premier à commenter cet épisode !</p>
        {% endfor %}
    </div>

    
{% endblock %}
