{% extends 'base.html.twig' %}
{% block title %}{{ webtoon.titre }}{% endblock %}

{% block body %}
    <style>
    .btn-edit {
        display: inline-block;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 6px;
        margin-bottom: 15px;
    }
    .btn-edit:hover {
        background-color: #0056b3;
    }
    .webtoon-container {
        display: flex;
        gap: 2rem;
        align-items: flex-start;
        margin: 2rem auto;
        max-width: 1000px;
    }

    .webtoon-card-wrapper {
        background: radial-gradient(ellipse at center,rgb(67, 75, 94) 0%,rgb(32, 40, 60) 100%);
        padding: 1.5rem;
        border-radius: 2rem;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        max-width: 260px;
        margin: auto;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .webtoon-card-wrapper img {
        max-width: 100%;
        border-radius: 1rem;
        box-shadow: 0 8px 20px rgba(114, 112, 112, 0.3);
        transition: transform 0.3s ease;
    }

    .webtoon-card-wrapper img:hover {
        transform: scale(1.03);
    }

    .episode-list {
        flex: 2;
        background-color: #fff;
        padding: 1rem;
        border: 1px solid #ddd;
        border-radius: 8px;
        max-width: 500px;
        width: 100%;
    }

    .episode-entry {
        padding: 0.75rem 0;
        border-bottom: 1px solid #eee;
    }

    .episode-entry:last-child {
        border-bottom: none;
    }

    .episode-entry a {
        text-decoration: none;
        color: #333;
        font-size: 1rem;
    }

    .episode-entry a:hover {
        text-decoration: underline;
    }
    </style>
    {% if app.user and webtoon.user == app.user and isAuthor %}
        <a href="{{ path('episode_form', { slug: webtoon.slug }) }}" class="btn-edit"   >
            ➕ Ajouter un épisode
        </a>
        <a href="{{ path('episode_edit_form', { slug: webtoon.slug }) }}" class="btn-edit">
            ✏️ Modifier un épisode
        </a>
        <a href="{{ path('webtoon_edit', { slug: webtoon.slug }) }}" class="btn-edit">
            ✏️ Modifier Webtoon
        </a>
    {% endif %}
    {% if app.user %}
        {% set liked = false %}
        {% for like in webtoon.likes %}
            {% if like.user == app.user %}
                {% set liked = true %}
            {% endif %}
        {% endfor %}

        <form method="post" action="{{ path('webtoon_like', {id: webtoon.id}) }}">
            <button type="submit" class="btn-edit">
                {{ liked ? 'Je n’aime plus ❤️' : 'J’aime ❤️' }}
            </button>
        </form>
    {% else %}
        <p><a href="{{ path('app_login') }}">Connecte-toi pour aimer ce webtoon</a></p>
    {% endif %}
    <p>{{ webtoon.likes|length }} j'aime</p>

    

    <h1>{{ webtoon.titre }}</h1>
    <p>{{ webtoon.description }}</p>

    <div class="webtoon-container">
        <div class="webtoon-card-wrapper">
            {% if webtoon.image %}
                <img src="{{ asset('images/' ~ webtoon.image) }}" alt="{{ webtoon.titre }}" width="300">
            {% else %}
                <img src="{{ asset('images/Default.png') }}" alt="Image par défaut" width="300">
            {% endif %}
        </div>

        <p><strong>Auteur :</strong> {{ webtoon.user.pseudo }}</p>

        <div class="episode-list">
            {% if episodes|length > 0 %}
                <ul>
                    {% for episode in episodes %}
                        <li>
                            <a href="{{ path('episode_detail', {slug: webtoon.slug, id: episode.number}) }}">
                                Voir l’épisode {{ episode.number }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p>Aucun épisode pour le moment.</p>
            {% endif %}
        </div>
    </div>

{% endblock %}
